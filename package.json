{
  "name": "better-authorize-net",
  "version": "1.0.1",
  "description": "Better Authorize.Net client for TypeScript and Node.js",
  "author": "Ben Scholzen 'DASPRiD'",
  "keywords": [
    "authorize.net",
    "payments",
    "typescript",
    "node",
    "api",
    "client"
  ],
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DASPRiD/better-authorize-net.git"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "c8 tsx --test test/*.test.ts test/**/*.test.ts",
    "test:ci": "c8 --reporter=lcov npm test",
    "format": "biome format . --write",
    "check": "biome check . --write",
    "generate-schemas": "tsx schema-generator/generate-schemas.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^25.0.9",
    "c8": "^10.1.3",
    "change-case": "^5.4.4",
    "fast-xml-parser": "^5.3.3",
    "fetch-mock": "^11.1.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "decimal.js": "^10.6.0",
    "zod": "^4.3.5"
  },
  "packageManager": "pnpm@10.24.0"
}
